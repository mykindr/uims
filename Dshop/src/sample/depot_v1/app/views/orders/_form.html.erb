<div class="bingdian_form">
<!-- START:explanation -->
<%= form_for(@order) do |f| %>

    <fieldset>
  <legend><%= t('.input_order_info') %></legend>
  <% if @order.errors.any? %>
    <div id="error_explanation">
<!-- START_HIGHLIGHT -->
      <h2><%=raw t('errors.template.header', count: @order.errors.count,
        model: t('activerecord.models.order')) %>.</h2>
      <p><%= t('errors.template.body') %></p>
<!-- END_HIGHLIGHT -->

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
<!-- START_HIGHLIGHT -->
        <li><%=raw msg %></li>
<!-- END_HIGHLIGHT -->
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- ... -->
<!-- END:explanation -->

  <div class="field">
    <%= f.label :teller, t('.teller') %>:
    <%= f.text_field :teller, size: 10 %>
  </div>

  <p>----------------------------------------------------------------------------------------------------------------------------------------------</p>

  <div class="field">
    <%= f.label :name, t('.name') %>:
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :cell_phone, t('.cell_phone') %>:
    <%= f.text_field :cell_phone, size: 13 %>
  </div>
  <div class="field">
<!-- START_HIGHLIGHT -->
    <%= f.label :address, t('.address_html') %>:<br />
<!-- END_HIGHLIGHT -->
    <%= f.text_area :address, rows: 2, cols: 80 %>
  </div>
  <div class="field">
    <%= f.label :email, t('.email') %>:
    <%= f.email_field :email, size: 40 %>
  </div>

  <p>----------------------------------------------------------------------------------------------------------------------------------------------</p>
  <div class="field">
    <%= f.label :level, t('.level') %>:
    <%= f.text_field :level, size: 10 %>
  </div>

  <div class="field">
    <%= f.label :pay_type, t('.pay_type') %>:
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
#START_HIGHLIGHT
                  prompt: t('.pay_prompt_html') %>
<!-- END_HIGHLIGHT -->
  </div>
  
  <div class="field">
    <%= f.label :discount, t('.discount') %>:
    <%= f.text_field :discount, size: 10 %>
  </div>

  <div class="field">
    <%= f.label :integration, t('.integration') %>:
    <%= f.text_field :integration, size: 10 %>
  </div>

    <p>------------------------------------------------------------------------------------------------------------------------------------------------</p>
  <div class="field">
    <%= f.label :note, t('.note') %>:<br />
    <%= f.text_area :note, rows: 4, cols: 80 %>
  </div>

  <div class="actions">
<!-- START_HIGHLIGHT -->
    <%= f.submit t('.submit') %>
<!-- END_HIGHLIGHT -->
  </div>

    </fieldset>
<% end %>
</div>