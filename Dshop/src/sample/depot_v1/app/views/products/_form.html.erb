<div class="bingdian_form">
<%= form_for @product, :html => { :multipart => true } do |f| %>

    <fieldset>
  <legend><%= t('.input_product_info') %></legend>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %>
      prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t('.title') %>:
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= t('.description') %>:<br />
<!-- START_HIGHLIGHT -->
    <%= f.text_area :description, rows: 23, cols: 80  %>
<!-- END_HIGHLIGHT -->
  </div>
  <div class="field">
    <%= t('.picture') %>:
    <!-- %= f.text_field :image_url %-->
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= t('.price') %>:
    <%= number_to_currency(f.text_field :price) %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>

    </fieldset>
<% end %>
</div>