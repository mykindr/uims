<h1><%= t('.title') %></h1>
<br />

<%= link_to t('.newUser'), new_user_path %>
<br />

<!-- START_HIGHLIGHT -->
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
<!-- END_HIGHLIGHT -->

<table border="1">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.created_at') %></th>
    <th><%= t('.updated_at') %></th>
    <th colspan="3"><%= t('.opt') %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= link_to t('.show'), user %></td>
    <td><%= link_to t('.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('.destroy'), user, method: :delete,
       data: { confirm: t('.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

