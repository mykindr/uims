<h1><%= t 'views.customers.index.listing_customers' %></h1>

<table>
  <tr>
    <th><%= t 'views.customers.index.cid' %></th>
    <th><%= t 'views.customers.index.loginname' %></th>
    <th><%= t 'views.customers.index.cname' %></th>
    <th><%= t 'views.customers.index.shopname' %></th>
    <th><%= t 'views.customers.index.sex' %></th>
    <th><%= t 'views.customers.index.address' %></th>
    <th><%= t 'views.customers.index.email' %></th>
    <th><%= t 'views.customers.index.qq' %></th>
    <th><%= t 'views.customers.index.tel' %></th>
    <th><%= t 'views.customers.index.state' %></th>
    <th><%= t 'views.customers.index.cdate' %></th>
    <th><%= t 'views.customers.index.remark' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.cid %></td>
    <td><%= customer.loginname %></td>
    <td><%= customer.cname %></td>
    <td><%= customer.shopname %></td>
    <td><%= customer.sex %></td>
    <td><%= customer.address %></td>
    <td><%= customer.email %></td>
    <td><%= customer.qq %></td>
    <td><%= customer.tel %></td>
    <td><%= customer.state %></td>
    <td><%= customer.cdate %></td>
    <td><%= customer.remark %></td>
    <td><%= link_to t('views.show'), customer %></td>
    <td><%= link_to t('views.edit'), edit_customer_path(customer) %></td>
    <td><%= link_to t('views.destroy'), customer, method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
  </tr>
<% end %>
</table>
<br />
<%= paginate @customers, :window => 2 %>

<br />

<%= link_to t('views.customers.index.new_customers'), new_customer_path %>
