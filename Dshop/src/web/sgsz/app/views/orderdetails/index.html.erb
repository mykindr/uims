<h1>Listing orderdetails</h1>

<table>
  <tr>
    <th>Oid</th>
    <th>Pid</th>
    <th>Barcode</th>
    <th>Goodsname</th>
    <th>Size</th>
    <th>Color</th>
    <th>Volume</th>
    <th>Unit</th>
    <th>Inprice</th>
    <th>Pfprice</th>
    <th>Hprice</th>
    <th>Outprice</th>
    <th>Amount</th>
    <th>Ramount</th>
    <th>Bundle</th>
    <th>Rbundle</th>
    <th>Discount</th>
    <th>Additional</th>
    <th>Subtotal</th>
