<h1><%= t 'views.orderdetails.index.listing_orderdetails' %></h1>

<table>
  <tr>
    <th><%= t 'views.orderdetails.index.oid' %></th>
    <th><%= t 'views.orderdetails.index.pid' %></th>
    <th><%= t 'views.orderdetails.index.barcode' %></th>
    <th><%= t 'views.orderdetails.index.goodsname' %></th>
    <th><%= t 'views.orderdetails.index.size' %></th>
    <th><%= t 'views.orderdetails.index.color' %></th>
    <th><%= t 'views.orderdetails.index.volume' %></th>
    <th><%= t 'views.orderdetails.index.unit' %></th>
    <th><%= t 'views.orderdetails.index.inprice' %></th>
    <th><%= t 'views.orderdetails.index.pfprice' %></th>
    <th><%= t 'views.orderdetails.index.hprice' %></th>
    <th><%= t 'views.orderdetails.index.outprice' %></th>
    <th><%= t 'views.orderdetails.index.amount' %></th>
    <th><%= t 'views.orderdetails.index.ramount' %></th>
    <th><%= t 'views.orderdetails.index.bundle' %></th>
    <th><%= t 'views.orderdetails.index.rbundle' %></th>
    <th><%= t 'views.orderdetails.index.discount' %></th>
    <th><%= t 'views.orderdetails.index.additional' %></th>
    <th><%= t 'views.orderdetails.index.subtotal' %></th>
    <th><%= t 'views.orderdetails.index.status' %></th>
    <th><%= t 'views.orderdetails.index.cdate' %></th>
    <th><%= t 'views.orderdetails.index.remark' %></th>
    <th colspan="3"><%= t 'views.operation' %></th>
  </tr>

<% @orderdetails.each do |orderdetail| %>
  <tr>
    <td><%= orderdetail.oid %></td>
    <td><%= orderdetail.pid %></td>
    <td><%= orderdetail.barcode %></td>
    <td><%= orderdetail.goodsname %></td>
    <td><%= orderdetail.size %></td>
    <td><%= orderdetail.color %></td>
    <td><%= orderdetail.volume %></td>
    <td><%= orderdetail.unit %></td>
    <td><%= orderdetail.inprice %></td>
    <td><%= orderdetail.pfprice %></td>
    <td><%= orderdetail.hprice %></td>
    <td><%= orderdetail.outprice %></td>
    <td><%= orderdetail.amount %></td>
    <td><%= orderdetail.ramount %></td>
    <td><%= orderdetail.bundle %></td>
    <td><%= orderdetail.rbundle %></td>
    <td><%= orderdetail.discount %></td>
    <td><%= orderdetail.additional %></td>
    <td><%= orderdetail.subtotal %></td>
    <td><%= orderdetail.status %></td>
    <td><%= orderdetail.cdate %></td>
    <td><%= orderdetail.remark %></td>
    <td><%= link_to t('views.show'), orderdetail %></td>
    <td><%= link_to t('views.edit'), edit_orderdetail_path(orderdetail) %></td>
    <td><%= link_to t('views.destroy'), orderdetail, method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @orderdetails, :window => 2 %>

<br />

