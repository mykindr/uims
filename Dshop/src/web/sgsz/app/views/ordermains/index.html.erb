<h1><%= t('.title') %></h1>
<div class="input_form">
<fieldset>
<legend><%= t('.ordermain_search_info') %></legend>
<%= form_tag ordermains_close_path, :method => 'get' do %>    
<p>    
    <%= label_tag t('.oid') %>:
    <%= text_field_tag :oid, params[:oid] %>    
    <%= label_tag t('.sname') %>:
    <%= text_field_tag :sname, params[:sname] %>    
</p>    

<p>    
    <%= submit_tag t('.search'), :name => nil %>    
</p>    
<% end %> 
</fieldset>
</div>
<br/>

<table border="1">
  <tr>
    <th width="90px"><%= t('.oid') %></th>
    <th width="50px"><%= t('.custname') %></th>
    <th width="90px"><%= t('.custtel') %></th>
    <th width="90px"><%= t('.custaddr') %></th>
    <th width="70px"><%= t('.shishou') %></th>
    <th width="90px"><%= t('.sname') %></th>
    <th width="90px"><%= t('.stel') %></th>
    <th width="30px"><%= t('.status') %></th>
    <th width="30px"><%= t('.dtype') %></th>
    <th width="90px"><%= t('.nextid') %></th>
    <th width="40px"><%= t('.canal') %></th>
    <th width="40px"><%= t('.payment') %></th>
    <th width="80px"><%= t('.created_at') %></th>
    <th width="80px"><%= t('.updated_at') %></th>
    <th width="40px" colspan="2"><%= t('.opt') %></th>
  </tr>
 
<% @ordermains.each do |ordermain| %>
  <tr>
    <td><%= ordermain.oid %></td>
    <td><%= ordermain.custname %></td>
    <td><%= ordermain.custtel %></td>
    <td><%= ordermain.custaddr %></td>
    <td><%= ordermain.shishou %></td>
    <td><%= ordermain.sname %></td>
    <td><%= ordermain.stel %></td>
    <td><%= ordermain.status == 1 ? t('.shippered') : t('.submited') %></td>
    <td><%= ordermain.dtype %></td>
    <td><%= ordermain.nextid %></td>
    <td><%= ordermain.canal %></td>
    <td><%= ordermain.payment %></td>
    <td><%= ordermain.created_at.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
    <td><%= ordermain.updated_at.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
    <td width="40px"><%= link_to t('.show'), ordermain %></td>
    <td width="40px">
    <% if ordermain.dtype == "提交" %> 
       <%= link_to t('.edit'), edit_ordermain_path(ordermain), data: { confirm: t('.are_you_sure_empty_cart') } %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<div>  
<%= paginate @ordermains, :window => 2 %>
</div>
