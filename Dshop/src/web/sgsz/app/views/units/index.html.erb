<h1><%= t 'views.units.index.listing_units' %></h1>

<table>
  <tr>
    <th><%= t 'views.units.index.uname' %></th>
    <th><%= t 'views.units.index.cdate' %></th>
    <th><%= t 'views.units.index.remark' %></th>
    <th colspan="3"><%= t 'views.operation' %></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.uname %></td>
    <td><%= unit.cdate %></td>
    <td><%= unit.remark %></td>
    <td><%= link_to t('views.show'), unit %></td>
    <td><%= link_to t('views.edit'), edit_unit_path(unit) %></td>
    <td><%= link_to t('views.destroy'), unit, method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @units, :window => 2 %>

<br />

<%= link_to t('views.units.index.new_units'), new_unit_path %>
